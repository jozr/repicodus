<h1>Table of contents</h1>

<ul>
  <% @tomes.each do |tome| %>
    <li><%= tome.description %></li>
    <% tome.chapters.each do |chapter| %>
      <ul>
        <li><%= chapter.description %></li>
              <ul>
                <% chapter.lessons.each do |lesson| %>
                <li><a href="/lessons/<%= lesson.id %>"><%= lesson.description %></a></li>
                <% end %>
              </ul>
      </ul>
      <% end %>
  <% end %>
</ul>

<form action="/teachers" method='get'>
    <input type='text' placeholder='Enter name...' name='name_input'></input>
    <button type='submit'>Enter</button>
</form>



